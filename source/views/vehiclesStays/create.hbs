<div class="card-body">
    <form action="/api/vehiclesStays" method="POST">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label class="col-form-label text-align-responsive" for="plate">Plate:</label>
                <input class="form-control" id="plate" name="plate" type="text" placeholder="Enter plate" maxlength="8" />
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label text-align-responsive" for="type">Type:</label>
                <select class="form-control" id="type" name="type">
                    <option value="1">CHECK IN</option>
                    <option value="2">CHECK OUT</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label text-align-responsive" for="hour">Hour:</label>
                <input class="form-control" id="hour" name="hour" type="time" placeholder="Enter hour" />
            </div>
        </div>
        <div class="form-row">
            <button type="submit" class="btn btn-primary ml-1">Save</button>
        </div>
    </form>
</div>